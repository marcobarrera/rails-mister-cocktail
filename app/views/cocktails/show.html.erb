<h1>Doses <%= @cocktail.name %></h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Ingredient</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktail.doses.each do |dose| %>
      <tr>
        <td><%= dose.description %></td>
        <td><%= dose.ingredient.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', cocktails_path %>  |
<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>
