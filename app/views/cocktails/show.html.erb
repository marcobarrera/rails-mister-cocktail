<h1>Doses <%= @cocktail.name %></h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Ingredient</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktail.doses.each do |dose| %>
      <tr>
        <td><%= dose.description %></td>
        <td><%= dose.ingredient.name %></td>
        <td>
            <%= link_to "Delete #{dose.ingredient.name}",
                dose,
                method: :delete,
                data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "doses/new", cocktail: @cocktail, dose: @dose %>

<%= link_to 'Back', cocktails_path %>
