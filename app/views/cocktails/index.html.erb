<h1>Cocktails</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-lg-4 mb-4">
        <div class="card" style="width: 18rem;">


          <div class="card-body">
            <h5 class="card-title"><%= cocktail.name %></h5>
            <%= link_to 'See Ingredients', cocktail, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
